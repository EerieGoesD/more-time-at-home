<Window x:Class="MoreTimeAtHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="More Time At Home" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Controls Panel -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="8,6,8,6">
            <StackPanel>
                <!-- Year and Country -->
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Year:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold" FontSize="11"/>
                    <ComboBox Grid.Column="1" x:Name="YearComboBox" SelectionChanged="YearComboBox_SelectionChanged" Height="22" FontSize="11"/>

                    <TextBlock Grid.Column="3" Text="Country:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold" FontSize="11"/>
                    <ComboBox Grid.Column="4" x:Name="CountryComboBox" SelectionChanged="CountryComboBox_SelectionChanged" Height="22" FontSize="11"/>

                    <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="Week starts:" VerticalAlignment="Center" Margin="0,0,6,0" FontWeight="SemiBold" FontSize="11"/>
                        <ComboBox x:Name="WeekStartComboBox"
                                  Width="120" Height="22" FontSize="11"
                                  SelectedIndex="0"
                                  SelectionChanged="WeekStartComboBox_SelectionChanged">
                            <ComboBoxItem Content="Mon â†’ Sun"/>
                            <ComboBoxItem Content="Sun â†’ Sat"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Paid Leaves and Calculate From -->
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Paid leaves:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold" FontSize="11"/>
                    <TextBox Grid.Column="1" x:Name="PaidLeavesTextBox" Text="20" VerticalContentAlignment="Center" Height="22" FontSize="11"/>

                    <TextBlock Grid.Column="3" Text="Calculate from:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold" FontSize="11"/>
                    <DatePicker Grid.Column="4" x:Name="CalculateFromDatePicker" Height="22" FontSize="11"/>
                </Grid>

                <!-- Constraints Section -->
                <Border BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="6" Margin="0,3,0,0">
                    <StackPanel>
                        <TextBlock Text="Constraints:" FontWeight="Bold" Margin="0,0,0,4" FontSize="11"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="72"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Days Off Row -->
                            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Days Off:" FontWeight="SemiBold" FontSize="10.5"/>
                                <TextBlock Text="(in a row)" FontSize="8" Foreground="#888"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Min 5" HorizontalAlignment="Center" FontSize="9" Foreground="#666" Margin="0,0,0,2"/>
                                <CheckBox x:Name="Minimum5ConstraintCheckBox" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Min 10" HorizontalAlignment="Center" FontSize="9" Foreground="#666" Margin="0,0,0,2"/>
                                <CheckBox x:Name="MinimumConstraintCheckBox" HorizontalAlignment="Center"
                                          Checked="MinimumConstraintCheckBox_Checked"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="Max 5" HorizontalAlignment="Center" FontSize="9" Foreground="#0066CC" Margin="0,0,0,2"/>
                                <CheckBox x:Name="Maximum5ConstraintCheckBox" HorizontalAlignment="Center"
                                          Checked="Maximum5ConstraintCheckBox_Checked"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center">
                                <TextBlock Text="Max 10" HorizontalAlignment="Center" FontSize="9" Foreground="#0066CC" Margin="0,0,0,2"/>
                                <CheckBox x:Name="Maximum10ConstraintCheckBox" HorizontalAlignment="Center"
                                          Checked="Maximum10ConstraintCheckBox_Checked"/>
                            </StackPanel>

                            <!-- Paid Leaves Row -->
                            <StackPanel Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Paid Leaves:" FontWeight="SemiBold" FontSize="10.5"/>
                                <TextBlock Text="(in a row)" FontSize="8" Foreground="#888"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Min 5" HorizontalAlignment="Center" FontSize="9" Foreground="#666" Margin="0,0,0,2"/>
                                <CheckBox x:Name="Minimum5PaidConstraintCheckBox" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Min 10" HorizontalAlignment="Center" FontSize="9" Foreground="#666" Margin="0,0,0,2"/>
                                <CheckBox x:Name="Minimum10PaidConstraintCheckBox" HorizontalAlignment="Center"
                                          Checked="Minimum10PaidConstraintCheckBox_Checked"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="Max 5" HorizontalAlignment="Center" FontSize="9" Foreground="#0066CC" Margin="0,0,0,2"/>
                                <CheckBox x:Name="Maximum5PaidConstraintCheckBox" HorizontalAlignment="Center"
                                          Checked="Maximum5PaidConstraintCheckBox_Checked"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center">
                                <TextBlock Text="Max 10" HorizontalAlignment="Center" FontSize="9" Foreground="#0066CC" Margin="0,0,0,2"/>
                                <CheckBox x:Name="Maximum10PaidConstraintCheckBox" HorizontalAlignment="Center"
                                          Checked="Maximum10PaidConstraintCheckBox_Checked"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Margin="0,4,0,0" FontSize="9" Foreground="#666">
                            <Run Text="â€¢ Days Off = total consecutive days off (includes weekends &amp; holidays)  â€¢ Paid Leaves = consecutive paid leave days (excluding weekends &amp; holidays)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Row 4: Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0" HorizontalAlignment="Left">
                    <Button x:Name="MaximizeButton" Content="ðŸŽ¯ Optimize" Width="100" Height="26" 
                            Click="MaximizeButton_Click" FontWeight="SemiBold" FontSize="10.5"
                            Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Margin="0,0,5,0"/>
                    <Button x:Name="HowToButton" Content="â“ How to" Width="75" Height="26" FontSize="10.5"
                            Click="HowToButton_Click" FontWeight="SemiBold"
                            Background="#FFD700" Foreground="#333" BorderThickness="0" Cursor="Hand"
                            Margin="0,0,5,0"/>
                    <Button x:Name="SaveButton" Content="ðŸ’¾ Save" Width="70" Height="26" FontSize="10.5"
                            Click="SaveButton_Click" Margin="0,0,5,0"/>
                    <Button x:Name="LoadButton" Content="ðŸ“‚ Load" Width="70" Height="26" FontSize="10.5"
                            Click="LoadButton_Click" Margin="0,0,5,0"/>
                    <Button x:Name="ClearButton" Content="ðŸ—‘ï¸ Clear" Width="65" Height="26" FontSize="10.5"
                            Click="ClearButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Calendar Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="3">
            <UniformGrid x:Name="CalendarGrid" Columns="4" Rows="3"/>
        </ScrollViewer>

        <!-- Statistics Panel -->
        <Border Grid.Row="2" Background="#F9F9F9" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="6,4,6,4">
            <TextBlock x:Name="StatisticsTextBlock" TextWrapping="Wrap" FontSize="10"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#E0E0E0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="8,5,8,5">
            <Grid>
                <TextBlock x:Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center" FontSize="10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Legend:" VerticalAlignment="Center" FontSize="10.5" FontWeight="SemiBold" Margin="0,0,8,0"/>

                    <Border Background="#4CC9F0" BorderBrush="#2A9FCF" BorderThickness="1" Padding="4,2" Margin="0,0,4,0" CornerRadius="2">
                        <TextBlock Text="ðŸŸ¦ National" Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                    </Border>

                    <Border Background="#90EE90" BorderBrush="#60BE60" BorderThickness="1" Padding="4,2" Margin="0,0,4,0" CornerRadius="2">
                        <TextBlock Text="ðŸŸ© Planned" Foreground="#1A5F1A" FontSize="10" FontWeight="SemiBold"/>
                    </Border>

                    <Border Background="#F9C74F" BorderBrush="#D9A72F" BorderThickness="1" Padding="4,2" Margin="0,0,4,0" CornerRadius="2">
                        <TextBlock Text="ðŸŸ¨ Weekend" Foreground="#5A3D0F" FontSize="10" FontWeight="SemiBold"/>
                    </Border>

                    <Border Background="#FF6B6B" BorderBrush="#DF4B4B" BorderThickness="1" Padding="4,2" Margin="0,0,4,0" CornerRadius="2">
                        <TextBlock Text="ðŸŸ¥ Holiday+Weekend" Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                    </Border>

                    <Border Background="#FFC0CB" BorderBrush="#DFA0AB" BorderThickness="1" Padding="4,2" Margin="0,0,12,0" CornerRadius="2">
                        <TextBlock Text="ðŸŸª Custom" Foreground="#8B3A62" FontSize="10" FontWeight="SemiBold"/>
                    </Border>

                    <TextBlock VerticalAlignment="Center" FontSize="10">
                        <Hyperlink NavigateUri="https://date.nager.at" RequestNavigate="Hyperlink_RequestNavigate">
                            Nager.Date API
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer / Credits -->
        <Border Grid.Row="4" Background="#2C3E50" BorderBrush="#1A252F" BorderThickness="0,1,0,0" Padding="8,4,8,4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Margin="0,0,15,0" FontSize="10" Foreground="#CCFFFFFF" VerticalAlignment="Center">
                    <Hyperlink NavigateUri="https://linktr.ee/eeriegoesd" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#CCFFFFFF">
                        Made by EERIE
                    </Hyperlink>
                </TextBlock>
                <TextBlock FontSize="10" Foreground="#CCFFFFFF" VerticalAlignment="Center">
                    <Hyperlink NavigateUri="https://buymeacoffee.com/eeriegoesd" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#CCFFFFFF">
                        â˜• Buy Me a Coffee
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>